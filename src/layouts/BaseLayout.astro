---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

const { pageTitle } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="bg-slate-800 text-slate-50 font-sans">
    <Header />
    <div class="py-6 container mx-auto flex items-start gap-4">
      <div class="p-4 flex-1 bg-slate-700 rounded-lg">
        <slot />
      </div>
      <div class="p-4 w-64 shrink-0 bg-slate-700 rounded-lg">サイド</div>
    </div>
    <Footer />
  </body>
</html>
